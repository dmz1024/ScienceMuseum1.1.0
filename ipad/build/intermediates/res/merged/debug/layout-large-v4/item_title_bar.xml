<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fg_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size20"
        android:background="#fff"
        android:visibility="gone"></FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:layout_below="@id/fg_bar"
        android:background="#fff">

        <ImageView
            android:id="@+id/bar_left"
            android:layout_width="@dimen/size23"
            android:layout_height="@dimen/size30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size15"
            android:src="@mipmap/icon_ipad_back"
             />


        <ImageView
            android:id="@+id/bar_right"
            android:layout_width="@dimen/size21"
            android:layout_height="@dimen/size21"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bar_title"
            android:maxEms="30"
            android:layout_marginLeft="@dimen/size30"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bar_left"
            android:textColor="#333"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/sp20" />


        <TextView
            android:layout_marginRight="@dimen/size12"
            android:layout_alignParentRight="true"
            android:id="@+id/bar_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="@dimen/sp15" />

        <View
            android:background="#e1e1e1"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1"/>
    </RelativeLayout>
</RelativeLayout>