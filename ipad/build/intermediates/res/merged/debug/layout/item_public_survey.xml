<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="@dimen/size10">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="@dimen/size21"
        android:layout_height="@dimen/size21"
        android:background="@drawable/round_c8a063"
        android:gravity="center"
        android:text="1"
        android:textColor="#fff"
        android:textSize="@dimen/sp13" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextSize13Color333"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size2"
        android:layout_toRightOf="@id/tv_num"
        android:text="游客对首都科学技术官的满意度调查" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/TextSize11Color999"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/size5"
        android:ellipsize="end"
        android:lines="2"
        android:lineSpacingExtra="3dp"
        android:text="游客对首都科学游客对首都科学技术官的满意度调查游客对首都科学技术官的满意度调查技术官的满意度调查" />

    <View
        android:background="#e1e1e1"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="@dimen/size10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"/>
</RelativeLayout>