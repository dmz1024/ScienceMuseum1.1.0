<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="@dimen/size10"
        android:paddingTop="@dimen/size10">

        <TextView
            style="@style/TextSize15Color333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size10"
            android:text="头像" />

        <ImageView
            android:id="@+id/iv_go"
            android:layout_width="@dimen/size5"
            android:layout_height="@dimen/size10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size12"
            android:background="@mipmap/icon_go" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size10"
            android:layout_marginTop="@dimen/size25"
            android:layout_toLeftOf="@id/iv_go" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size0.5"
            android:layout_below="@id/iv_img"
            android:layout_marginLeft="@dimen/size12"
            android:layout_marginRight="@dimen/size12"
            android:background="#ebebeb" />
    </RelativeLayout>

    <com.shoudukejiguan.www.view.TitleRelativeLayout
        android:id="@+id/tr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        tool:TitleRelativeLayout_content="仅存的温柔"
        tool:TitleRelativeLayout_content_image_visi="false"
        tool:TitleRelativeLayout_show_view="2"
        tool:TitleRelativeLayout_title="团体名称"
        tool:TitleRelativeLayout_view_visi="true" />

    <com.shoudukejiguan.www.view.TitleRelativeLayout
        android:id="@+id/tr_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="#fff"
        tool:TitleRelativeLayout_content="非会员"
        tool:TitleRelativeLayout_content_image_visi="false"
        tool:TitleRelativeLayout_show_view="2"
        tool:TitleRelativeLayout_title="会员等级"
        tool:TitleRelativeLayout_view_visi="true" />

    <com.shoudukejiguan.www.view.TitleRelativeLayout
        android:id="@+id/tr_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="#fff"
        tool:TitleRelativeLayout_content="100张"
        tool:TitleRelativeLayout_content_image_visi="false"
        tool:TitleRelativeLayout_content_style="@style/TextSize13Colorc9a06c"
        tool:TitleRelativeLayout_show_view="2"
        tool:TitleRelativeLayout_title="三生主展参观票"
        tool:TitleRelativeLayout_view_visi="true" />

    <com.shoudukejiguan.www.view.TitleRelativeLayout
        android:id="@+id/tr_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        tool:TitleRelativeLayout_content="100张"
        tool:TitleRelativeLayout_content_image_visi="false"
        tool:TitleRelativeLayout_content_style="@style/TextSize13Colorc9a06c"
        tool:TitleRelativeLayout_show_view="2"
        tool:TitleRelativeLayout_title="三生主展参观票"
        tool:TitleRelativeLayout_view_visi="true" />

    <com.shoudukejiguan.www.view.TitleRelativeLayout
        android:id="@+id/tr_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        tool:TitleRelativeLayout_content="100张"
        tool:TitleRelativeLayout_content_image_visi="false"
        tool:TitleRelativeLayout_content_style="@style/TextSize13Colorc9a06c"
        tool:TitleRelativeLayout_show_view="2"
        tool:TitleRelativeLayout_title="三生主展参观票"
        tool:TitleRelativeLayout_view_visi="true" />

    <com.shoudukejiguan.www.view.TitleRelativeLayout
        android:id="@+id/tr_chengzhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="#fff"
        tool:TitleRelativeLayout_content="还需5421张票即可晋升会员"
        tool:TitleRelativeLayout_content_image_visi="false"
        tool:TitleRelativeLayout_show_view="2"
        tool:TitleRelativeLayout_title="会员成长"
        tool:TitleRelativeLayout_view_visi="true" />

    <com.shoudukejiguan.www.view.TitleRelativeLayout
        android:id="@+id/tr_tujing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="#fff"
        tool:TitleRelativeLayout_content="订票满一万张即可成为会员"
        tool:TitleRelativeLayout_content_image_visi="false"
        tool:TitleRelativeLayout_show_view="2"
        tool:TitleRelativeLayout_title="会员晋升途径"
        tool:TitleRelativeLayout_view_visi="true" />

    <Button
        android:id="@+id/bt_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size40"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size60"
        android:background="#00abbb"
        android:text="去购票"
        android:textColor="#fff"
        android:textSize="@dimen/sp17" />

</LinearLayout>
