<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size20"
    android:paddingLeft="@dimen/size10">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/size113"
        android:layout_height="@dimen/size70"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_title"
        android:text="光科学课程第一季"
        android:layout_marginTop="@dimen/size5"
        style="@style/TextSize10Color333"
        android:layout_below="@id/iv_img" />

    <TextView
        android:id="@+id/tv_price"
        android:text="￥59"
        android:layout_marginTop="@dimen/size5"
        style="@style/TextSize9Color999"
        android:layout_below="@id/tv_title" />

    <TextView
        android:id="@+id/tv_count"
        android:text="35人已报名"
        android:layout_alignRight="@id/iv_img"
        android:layout_marginTop="@dimen/size5"
        style="@style/TextSize9Color999"
        android:layout_below="@id/tv_title" />
</RelativeLayout>