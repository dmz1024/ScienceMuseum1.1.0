<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:paddingBottom="@dimen/size10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_e0e0e0"

        >

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/size180"
            android:layout_height="@dimen/size120"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextSize14Color333"
            android:layout_below="@id/iv_img"
            android:layout_marginLeft="@dimen/size3"
            android:layout_marginTop="@dimen/size5"
            android:text="光科学课程第一季" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextSize12Color999"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="@dimen/size3"
            android:layout_marginTop="@dimen/size5"
            android:text="￥59" />

        <TextView
            android:id="@+id/tv_count"
            style="@style/TextSize12Color999"
            android:layout_alignRight="@id/iv_img"
            android:layout_below="@id/tv_title"
            android:layout_marginRight="@dimen/size3"
            android:layout_marginTop="@dimen/size5"
            android:text="35人已报名" />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/size10"
        android:layout_height="@dimen/size4">
    </View>
</LinearLayout>