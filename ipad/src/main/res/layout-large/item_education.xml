<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="@dimen/size5">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/size106"
        android:layout_height="@dimen/size80"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextSize13Color333"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginTop="@dimen/size5"
        android:layout_toRightOf="@id/iv_img"
        android:singleLine="true"
        android:text="光科学课程" />

    <TextView
        android:id="@+id/tv_count"
        style="@style/TextSize11Color999"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/size5"
        android:singleLine="true"
        android:text="名额上限：40人   |   已报名：32人" />

    <TextView
        android:id="@+id/tv_peoson"
        style="@style/TextSize11Color999"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_count"
        android:layout_marginTop="@dimen/size5"
        android:singleLine="true"
        android:maxEms="15"
        android:text="适合人群：12-26岁" />

    <TextView
        android:id="@+id/tv_￥"
        style="@style/TextSize12Color999"
        android:textColor="#f00"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_peoson"
        android:layout_marginTop="@dimen/size5"
        android:singleLine="true"
        android:maxEms="15"
        android:text="￥" />
    <TextView
        android:id="@+id/tv_price"
        style="@style/TextSize14Color999"
        android:textColor="#f00"
        android:layout_toRightOf="@id/tv_￥"
        android:layout_alignBottom="@id/tv_￥"
        android:text="59" />

    <TextView
        style="@style/TextSize11Color999"
        android:layout_alignBottom="@id/tv_price"
        android:layout_toRightOf="@id/tv_price"
        android:layout_below="@id/tv_peoson"
        android:layout_marginTop="@dimen/size5"
        android:layout_marginLeft="@dimen/size1"
        android:text="/人" />


    <Button
        android:id="@+id/bt_order"
        android:layout_width="@dimen/size65"
        android:layout_height="@dimen/size25"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_price"
        android:layout_marginRight="@dimen/size10"
        android:background="@drawable/rectangle_03abee"
        android:padding="@dimen/size1"
        android:text="我要报名"
        android:textColor="#03abee"
        android:textSize="@dimen/sp14" />
    <View
        android:layout_below="@id/iv_img"
        android:background="#eee"
        android:layout_marginTop="@dimen/size10"
        android:layout_alignLeft="@id/iv_img"
        android:layout_alignRight="@id/bt_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size0.5"/>
</RelativeLayout>