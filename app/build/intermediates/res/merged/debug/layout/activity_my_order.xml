<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_tab"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size40"
        android:background="#fff"
        tool:tl_iconVisible="false"
        tool:tl_indicator_color="#00acbb"
        tool:tl_indicator_corner_radius="1.5dp"
        tool:tl_indicator_height="5dp"
        tool:tl_indicator_style="TRIANGLE"
        tool:tl_indicator_width="50dp"
        tool:tl_textSelectColor="#00acbb"
        tool:tl_textUnselectColor="#333"
        tool:tl_textsize="@dimen/sp16" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
